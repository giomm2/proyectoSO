<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="#3F51B5">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="Name"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/TxName"
        android:background="#ffffff"
        android:textSize="30dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button"
        android:onClick="goPlay"
        android:textSize="30dp"

        android:layout_marginBottom="242dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/TxName"
        android:layout_alignEnd="@+id/TxName"
        android:layout_alignLeft="@+id/TxName"
        android:layout_alignStart="@+id/TxName" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imgMusic"
        android:src="@drawable/music1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp" />
</RelativeLayout>
